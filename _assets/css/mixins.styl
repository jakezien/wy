absolute100()
    position absolute
    width 100%
    height 100%
    top 0
    left 0

Garamond()
  font-family "adobe-garamond-pro", "Garamond", "Georgia", "Times", serif
  font-weight normal
  Kern()
  OldstyleNums()

GaramondDisplay()
  font-family "garamond-premier-pro-display", "Garamond", "Georgia", "Times", serif
  font-weight normal
  Kern()
  OldstyleNums()

Franklin()
  font-family "franklin-gothic-ext-comp-urw", "Helvetica Neue", "Helvetica", sans-serif
  font-weight 400
  Kern()

FranklinBold()
  font-family "franklin-gothic-ext-comp-urw", "Helvetica Neue", "Helvetica", sans-serif
  font-weight 700
  Kern()


SmallCaps()
  text-transform lowercase
  -moz-font-feature-settings:"onum" 1, "kern" 1, "smcp" 1; 
  -moz-font-feature-settings:"onum=1 kern=1 smcp=1"; 
  -ms-font-feature-settings:"onum" 1, "kern" 1, "smcp" 1; 
  -o-font-feature-settings:"onum" 1, "kern" 1, "smcp" 1; 
  -webkit-font-feature-settings:"onum" 1, "kern" 1, "smcp" 1; 
  font-feature-settings:"onum" 1, "kern" 1, "smcp" 1; 

OldstyleNums()
  -moz-font-feature-settings:"onum" 1, "kern" 1; 
  -moz-font-feature-settings:"onum=1 kern=1"; 
  -ms-font-feature-settings:"onum" 1, "kern" 1;
  -o-font-feature-settings:"onum" 1, "kern" 1;
  -webkit-font-feature-settings:"onum" 1, "kern" 1;
  font-feature-settings:"onum" 1, "kern" 1;

NoLiga()
  font-feature-settings "liga" 0

Kern()
  text-rendering optimizeLegibility
  font-feature-settings "kern" 1 

KernNoLiga()
  text-rendering optimizeLegibility
  font-feature-settings "kern" 1, "liga" 0

Smooth()
  font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
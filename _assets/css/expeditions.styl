.expeditions

  section
    width 100%
    padding-top 4em
    padding-bottom 4em
    clearfix()
    h2 
      font-size 2em
      font-weight 400
      line-height 1em
      Brandon()
      text-transform uppercase
      font-weight bold
      letter-spacing 0.06em
    p
      Freight()
      font-size 1.5em

  #top
    background-image url('/images/expeditions-top@2x.jpg')
    background-size cover
    height 525px
    background-position center center
    color #fff
    h1
      FreightBig()
      font-size 10em
      font-weight normal
      text-align center
      padding-top 60px
      margin .5em 0 .25em 0
    p
      Freight()
      font-size 1.5em
      text-align center
      column(8)
      push(2)

  #intro
    
    .dropcap
      column(2)
      font-size 5em
      line-height .8em
      FreightBig()
      position relative
      left -0.1em
      width .46em
      overflow visible

    p
      column(5)
      &:first-child
        push(1)

  #activities
    div
      column(3.33)
      &:first-child
        push(1)

  #proceeds
    padding-top 0
    padding-bottom 8em
    p
      column(10)
      push(1)
.expeditions

  section
    width 100%
    padding-top 4em
    padding-bottom 4em
    clearfix()
    background-color white
    h2 
      padding 0 1rem
      font-size 2em
      font-weight 400
      line-height 1em
      Franklin()
      text-transform uppercase
      font-weight bold
      letter-spacing 0.06em
    p
      padding 0 1rem
      Garamond()
      font-size 1.5em

  #top
    position relative
    overflow hidden
    height 100vh
    padding 0
    background-position center center
    color #fff

    h1
      position relative
      z-index 0

    p
      Garamond()
      font-size 1.5em
      text-align center
      column(10)
      push(1)
      position relative
      z-index 2

   .bg
      absolute100()
      .sky
        absolute100()
        background-size cover
        background-position center center
      .bottom
        position absolute
        width 100%
        height auto
        bottom 0
        font-size 0
        line-height 0

      .mountains, .tents
        position relative
        z-index 1
        img
          width 100%
          height auto


  #intro
    p
      margin-bottom 1em
      clearfix()

  #activities
    .wrapper div
      margin-bottom 4em
      &:last-child
        margin-bottom 0

  #proceeds
    padding-top 0
    padding-bottom 8em
    
  #form
    padding-top 0
    padding-bottom 10em
    .arrow-link
      h2
        padding-left 0  
      span
        display block
  
  .wrapper
    column(10)
    push(1)
    overflow visible

@media only screen and (min-width: 768px)
  .expeditions
    section
      h2
        padding 0
      p
        padding 0
        
    #top
      p
        column(8)
        push(2)
      h1
        font-size 9em

    #intro 
      p
        column(6)
        clear none

    #activities
      .wrapper div
        margin-bottom 0
        column(4)
          
    #form
      .arrow-link span
        display inline
      .wrapper
        column(8)
        push(2)
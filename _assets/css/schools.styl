.schools

  section
    color #302624
    width 100%
    padding-top 5em
    padding-bottom 5em
    clearfix()
    .text
      column(4)
      push(1)
    .photo
      height 420px
      background-size cover
      background-position center center
      column(5)
      push(1)

    h2 
      font-size 2em
      font-weight 400
      line-height 1em
      Brandon()
      text-transform uppercase
      font-weight bold
      letter-spacing 0.06em
    p
      Freight()
      font-size 1.5em


  #top 
    height 525px
    background url('/images/string.jpg')
    background-size auto 75%
    background-position center center
    background-repeat no-repeat
    h1
      FreightBig()
      font-size 10em
      font-weight normal
      text-align center
      margin .5em 0 .25em 0
    p
      Freight()
      font-size 2.5em
      text-align center
      column(8)
      push(2)
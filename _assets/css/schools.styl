        push(1)
        height 60%        
      .caption
        push(8)
        padding-top 0
        margin-bottom 20%

    #preschool
      padding-top 15vh
      .frame-img
        column(7)
        push(4)
        height 70% 
      .caption
        padding 0
        column(2.5)
        push(1)
        margin-bottom 20%
    
    #high-school
      padding-top 15vh
      .frame-img
        column(7)
        push(1)
        height 60%        
      .caption
        push(8)
        padding-top 0
        margin-bottom 20%

    #math
      padding-top 15vh
      .frame-img
        column(7)
        push(4)
        height 70%        
      .caption

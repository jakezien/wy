.schools

  section
    color #302624
    width 100%
    padding-top 2em
    padding-bottom 2em
    clearfix()
    .photo
      height 420px
      background-size cover
      background-position center center
      column(5)
      push(1)

    h1
      FreightBig()
      color #fff
      font-size 6.5em
      font-weight normal
      text-align center
      margin .5em 0 .25em 0

    h2 
      font-weight 400
      line-height 1em
      Brandon()
      text-transform uppercase
      font-weight bold
      letter-spacing 0.06em
      padding 0 1rem

    p
      Freight()
      padding 0 1rem

  #top 
    background url('/images/schools-top@2x.jpg')
    background-size cover
    background-color #F22E60
    // background-blend-mode multiply
    background-position center center
    background-repeat no-repeat
    color #fff
    text-align center

  .multiply
    position absolute
    width 300px
    height 300px
    background-color #F22E60
    mix-blend-mode multiply
    top 200px
    left 200px

@media only screen and (min-width: 768px)
  .schools
    section
      padding-top 5em
      padding-bottom 5em
      .text
        column(4)
        push(1)
    #top 
      margin-top 60px
      min-height 525px
      h1
        font-size 10em
      p
        Freight()
        font-size 2.5em
        text-align center
        column(8)
        push(2)
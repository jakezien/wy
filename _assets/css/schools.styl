.schools

  background white

  section
    color #302624
    width 100%
    min-height 50vh
    overflow hidden
    position relative
    z-index 1
    clearfix()

    &.cta
      min-height 25vh

    p
      Garamond()
      font-size 1.25em
      i
        font-style italic
    
    .frame-img
      column(12)
      margin 0
      width 100%
      height 80vh
      position relative
      z-index 1
      left 0
      &.zoom
        div
          transition transform 0.5s ease

      &.move-h
        div
          width 115%
          height 100%
          background-size 100% auto

      &.move-v
        div
          width 100%
          height 120%
          background-size auto 100% 

      div
        position absolute
        height 110%
        background-size auto 100% 
        background-position center center
        backface-visibility hidden
        transition opacity .25s ease-out
        &.loading
          opacity 0
    
    .caption
      position relative
      background white
      padding 2em 2em 4em 2em
      z-index 2
      p
        margin 0
        a
          color clay
          text-decoration none
          transition color 0.15s ease
          &:hover
            color hotPink
            
      h2
        font-size 2.25em
        letter-spacing 0.25em
        margin 0
        text-transform uppercase
        border-bottom 2px solid
        padding-bottom 1em
        margin-bottom 1em
      .dropcap
        font-size 11em
        line-height 0.66em
        Franklin()
        max-width .3em
        padding-bottom 0.1em
      .keyline
        column(12)
        height 1px
        background brown
        margin 0 0 2em 0

  #top 
    color #fff
    min-height 100vh
    .bg, .img
      absolute100()
      backface-visibility hidden
    .img
      // background url('/images/schools/top@2x.jpg')
      background-size cover
      background-position center center
      background-repeat no-repeat
    h1
      letter-spacing -0.025em
      
  #preschool
    .frame-img div
      background-position center bottom


  


@media only screen and (min-width: 768px)
  .schools
    section
      padding-top 5em
      padding-bottom 5em
      .frame-img
        position absolute
        height auto
        z-index 0
      .caption
        column(3)

    #top h1
        margin-bottom 1em

    .title
      GaramondDisplay()
      font-size 3em
      margin 0 0 8em 0
      padding 0
      overflow visible
      color hotPink
      z-index 0
      // z-index 3
      // mix-blend-mode multiply
      text-align center
      .wrapper
        text-align left
        display inline-block
      h2
        letter-spacing 0.15em

        

    #intro-1
      padding-top 15vh
      .frame-img
        column(8)
        push(3)
        height 70%        
      .caption
        padding-top 0
        padding-left 0
        column(2.5)
        push(1)
        margin-bottom 20%
    
    #intro-2

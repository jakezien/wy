.shop
  background white
  padding-top 6em

  .bg
    absolute100()
    position fixed
    .frame-img
      height 100%
      div
        background-size cover
        height 100%
        background-position right bottom
    .gradient
      absolute100()
      background gradient()
  
  section
    position relative
    z-index 0


  #top 
    position relative
    min-height 66vh
    color white

  .keyline
    column(12)
    height 1px
    background-color brown
    margin-top 2.5em
    margin-bottom 2.5em

  #story 
    Garamond()
    .keyline
      background-color white
    .text
      column(10)
      push(1)
      clearfix()
    
  .col 
    p:first-child
      margin-top 0

  aside
    background white
    z-index 1
    position fixed
    top 58px
    z-index 1
    width 100%
    div.filter
      overflow-x scroll
    ul
      width 1230px
      padding 0.5rem
    li
      display inline-block
      padding 0 1rem
      Garamond()
      color brown
      font-size 1.55em
      margin-bottom 0.25rem
      padding-left 0.5rem
      cursor pointer
      transition color 0.15s ease
      &:hover
        color clay
      &.active
        color hotPink

  #items
    max-width 1200px
    background white
    clearfix()
    margin 0 auto
    
  .shop-item
    column(10)
    push(1)
    // min-height 300px
    box-sizing border-box
    padding-top 1rem
    > a
      display block
      height 100%
      transition opacity 0.2s ease
      &:hover
        opacity 0.5
    .img
      height 220px
      margin 1rem
      background-size contain
      background-repeat no-repeat
      background-position center center
      background-blend-mode multiply
      transition opacity 0.5s ease-out 0.5s
      &.loading
        opacity 0
        transition none
        
    .info
      display none
      padding-top 1em
      height 1em
      overflow hidden
  
  .pagination
    column(12)
    Garamond()
    font-size (1.5em)
    color brown
    span
      text-align center
      transition color 0.15s ease
      cursor default
    .page-prev, .page-next
      display inline-block
      width 2em
      height 2em
      cursor pointer
      &:hover
        color hotPink
    


@media only screen and (min-width: 640px)
  .shop .shop-item
    column(4)

@media only screen and (min-width: 768px)
  .shop 
    aside
      column(2)
      height 100%
      z-index 0
      position initial
      .filter
        position absolute
        ul
          padding-top 2em
          width auto
        li
          display block
        &.fixed
          position fixed
          top 0
      
    #items
      margin-top 25em
      min-height 640px
      box-sizing border-box
      padding-bottom 100px
      .item-list, .pagination
        column(9.5)
        push(2)
        pull(.5)
    .shop-item
      column(4)
    #story .text .col
        column(6)
        

@media only screen and (min-width: 1000px)
  .shop .shop-item
    column(3)

@media only screen and (min-width: 1200px)
  .shop .shop-item
    column(2.4)
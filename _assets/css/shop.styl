.shop

  padding-top 6em

  #top 
    position relative
    min-height 100vh
    overflow hidden

    .bg
      overflow hidden
      absolute100()
      
    .weaving
      width 180px
      height 225px
      width 15vw
      height 20vw
      background-size contain
      position absolute
      &.bag
        background-image url('/images/shop/weaving-0@2x.jpg')
        width 25vw
        height 25vw
        top 50vh
        left 15vw
      &.scarf
        background-image url('/images/shop/weaving-6@2x.jpg')
        height 35vw
        width 30vw
        top 15vh
        left 65vw
      &.rainbow
        background-image url('/images/shop/weaving-4@2x.jpg')
        width 19vw
        top 10vh
        left 5vw
      &.tonal
        background-image url('/images/shop/weaving-5@2x.jpg')
        width 18vw
        height 20vw
        right -10vw
        top 8vh
      &.brown
        // background-image url('/images/shop/weaving-1@2x.jpg')
        top -5vh
        left 70vw
        width 20vw
      &.red
        background-image url('/images/shop/weaving-2@2x.jpg')
        bottom -2vh
        left -6vw
        width 20vw
      &.brown-1
        background-image url('/images/shop/weaving-3@2x.jpg')
        width 20vw
        height 20vw
        top 70vh
        right 5vw
        z-index 1

  #items
    clearfix()
    
  .shop-item
    column(10)
    .img
      height 300px
      background-size contain
      background-repeat no-repeat
      background-position center center
    > a
      display block
      height 100%
      
  .pagination
    .page-prev, .page-next
      display inline-block
      width 2em
      height 2em
      cursor pointer
    

@media only screen and (min-width: 768px)
  .shop
    .shop-item
      column(3)
      border 1px solid red
      box-sizing border-box
      padding-top 1rem
      padding-bottom 1rem
      min-height 240px
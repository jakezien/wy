.home, .page.index
  
  background white

  section
    position relative
    z-index 1
    Garamond()
    clearfix()
    min-height 100vh

    .dropcap
      font-size 11em
      line-height 0.66em
      Franklin()
      max-width .3em
      padding-bottom 0.1em


    .frame-img
      column(12)
      margin 0
      width 100%
      height 80vh
      position relative
      z-index 1
      left 0
      
      &.move-h
        div
          width 125%
          height 100%
          background-size 100% auto

      &.move-v
        div
          width 100%
          height 120%
          background-size auto 100% 

      div
        position absolute
        height 110%
        width 100%
        background-size auto 100% 
        background-position center center
        backface-visibility hidden

    .caption
      position relative
      padding 2em 2em 4em 2em
      backface-visibility hidden
      h2
        GaramondDisplay()
        font-size 6em
        line-height 1
        text-transform none
        letter-spacing -0.02em
        margin 1.5rem 0 1.25rem 0
        position relative
        left -0.2rem
      h3
        font-size 1.5em
        font-weight 400
        margin 0
        color brown
      p
        margin 0
        max-width 90%
        font-size 1.25em
      a
        color clay
        text-decoration none
        display block
        margin-top 1rem
        font-size 1.25em
      .dropcap
        font-size 11em
        line-height 0.66em
        Franklin()
        max-width .3em
        padding-bottom 0.1em
      .keyline
        width 100%
        height 1px
        background brown  
        margin 1em 0
      .title
        display block
        color brown
        margin 1em 0
        padding 0
        position relative
        svg *
          stroke brown
          transition stroke 0.3s ease
        &:hover
          .hover
            width 100%
          .arrow-wrap
            transform translateX(16px)
            transition transform 0.3s ease-out 0.1s
          svg *
            stroke hotPink
             
      .title-inner
        border-top 1px solid brown
        border-bottom 1px solid brown
        &.hover
          absolute100()
          width 0
          height auto
          border-top 1px solid hotPink
          border-bottom 1px solid hotPink
          color hotPink
          transition width 0.3s ease
          overflow hidden

                  

      .arrow-wrap
        position absolute
        right 0
        width 32px
        top 50%
        margin-top -10px
        transition transform 0.3s ease

  .bg
    absolute100()
    position fixed

    .bg-cover
      absolute100()
      background white
      opacity 0

    video
      pointer-events none
      absolute100()
      width auto
      height auto
      min-width 100%
      min-height 100%
      overflow hidden
      transform translateX(-50%)
      margin-left 50%
      z-index 0

  .keyline
    background cloud
    height 2px
    clearfix()

  #top
    margin-top 60px
    color brown
    position relative
    z-index 1

    .logotype
      width 65%
      margin 0 auto
      height auto

      svg 
        margin 25vh auto 30vh auto
        *
          fill white

    h1
      FreightBig()
      font-size 6.5em
      font-weight normal
      text-align center
      margin .5em 0 .25em 0

    p
      Freight()
      text-align center
      font-size 2em

  #intro
    min-height 10vh
    .keyline
      column(10)
      push(1)
    .text
      column(10)
      push(1)
      color white
      font-size 1.25em


.home, .page.index
  
  background white

  section
    position relative
    z-index 1
    Garamond()
    clearfix()
    min-height 100vh

    .dropcap
      font-size 11em
      line-height 0.66em
      Franklin()
      max-width .3em
      padding-bottom 0.1em


    .frame-img
      column(12)
      margin 0
      width 100%
      height 80vh
      position relative
      z-index 1
      left 0
      margin-bottom 2em
      
      &.move-h
        div
          width 125%
          height 100%
          background-size 100% auto

      &.move-v
        div
          width 100%
          height 120%
          background-size auto 100% 

      div
        position absolute
        height 110%
        width 100%
        background-size auto 100% 
        background-position center center
        backface-visibility hidden

    .caption
      position relative
      padding 2em 2em 4em 2em
      backface-visibility hidden
      margin-bottom 2em

      h3
        font-size 1.5em
        font-weight 400
        margin 0
        color brown
      p
        margin 0
        max-width 80%
        font-size 1.5em
      a
        text-decoration none
        display block
        margin-top 1rem
        font-size 1.25em
          

      .dropcap
        font-size 11em
        line-height 0.66em
        Franklin()
        max-width .3em
        padding-bottom 0.1em
      .keyline
        width 100%
        height 1px
        background brown  
        margin 1em 0
        
  #home-shop
    .frame-img
      div
        background-size contain
        height 100%

  .bg
    absolute100()
    position fixed

    .bg-cover
      absolute100()
      background white
      opacity 0

    video
      pointer-events none
      absolute100()
      width auto
      height auto
      min-width 100%
      min-height 100%
      overflow hidden
      transform translateX(-50%)
      margin-left 50%
      z-index 0

  .keyline
    background cloud
    height 2px
    clearfix()

  #top
    margin-top 60px
    min-height 85vh
    color brown
    position relative
    z-index 1
    display table
    
    .logotype
      height auto
      margin 0 auto
      width 80%
      min-height 50px

      svg 
        margin 0 auto
        *
          fill cloud

    .keyline
      width 75%
      margin 3em auto
      opacity 0.9

    p
      color cloud
      GaramondDisplay()
      // font-style italic
      font-size 2.5em
      margin-bottom 0.5em
      letter-spacing 0.02em
      column(10)
      push(1)

    h1
      FreightBig()
      font-size 6.5em
      font-weight normal
      text-align center
      margin .5em 0 .25em 0

  #intro
    min-height 10vh
    margin-bottom 10vh
    
    .text
      column(10)
      push(1)
      color white
      font-size 1.25em

@media only screen and (max-width: 768px)
  .home, .page.index
    section .caption
      transform none !important



#donate
  absolute100()
  position fixed
  z-index 3
  z-index 3
  display none
  Garamond()
  transition background-color 1s ease-in

  &.block
    display block

  &.show
    background rgba(250,250,255,0.3)
    transition background-color 1s ease-out

    .half-l, .half-r
      opacity 1
    .half-l
      transition opacity 0.5s ease-out 0.6s
    .half-r
      transition opacity 0.5s ease-out 0.7s
    .border
      border-width 20px
    .hide-btn
      opacity 1
      transition opacity 0.5s ease 0.5s, background-color 0.15s ease

  .text
    absolute100()
    position relative
    overflow scroll
    margin-bottom 4em
    color dkBrown

    h1
      GaramondDisplay()
      margin .75em 0
      font-size 4em
      font-weight normal
      line-height 1.1

    h2
      clear both

  .multiply
    absolute100()
    background hotPink
    mix-blend-mode multiply

  .border
    absolute100()
    box-sizing border-box
    border 0px solid cloud
    transition border-width 1s ease

  .btn-container
    .trigger
      display block
      Franklin()
      font-size 3.25em
      letter-spacing 0.075em
      text-transform uppercase
      color cloud
      transition background-color 0.2s ease, color 0.2s ease
      cursor pointer
      
      &:hover
        background rgba(247, 73, 115, 0.75)
        color cloud

      .line-break
        display none

  .keyline
    column(12)
    margin 1em 0
    height 2px
    background cloud

  .mail
    p
      font-size 1.1em

  .half-l, .half-r
    opacity 0
    transition opacity 0.5s ease-in

  .half-l
    overflow scroll
    -webkit-overflow-scrolling touch
    height 100%

  .half-r
    position fixed
    height 10em
    bottom 0
    left 0
    width 100%
    padding 0

  .btn-container
    .trigger
      background hotPink

  .hide-btn
    position absolute
    top 0
    left 0
    width 60px
    height 60px
    opacity 0
    transition opacity 0.5s ease, background-color 0.15s ease
    svg
      width 28px
      height 28px
      position relative
      left 25%
      top 25%
      *
        fill clay
        transition fill 0.15s ease
    &:hover 
      svg
        *
          fill hotPink



@media only screen and (min-width: 768px)

  #donate
    .text 
      column(5)
      push(1)
      margin-top 7em
      h1
        font-size 6.5em
        margin 0

    .mail
      p
        column(6)

    .half-l, .half-r
      absolute100()
      bottom 20px
      height calc(100% - 20px)

    .half-r
      left 60%
      width 40%
      bottom auto

    .btn-container
      .trigger
        absolute100()
        top 20px
        width calc(100% - 20px)
        height calc(100% - 20px)
        margin 0
        background rgba(250,250,255,0.3)
        border none
        font-size 5em
        letter-spacing 0.2em
        color crimson
        display table
        .cell
          text-align center
          display table-cell
          vertical-align middle
          div
            line-height 1.5
            p
              display inline-block
              margin 0 auto
              border-bottom 4px solid

    .hide

    .hide-btn
      top 69px
      cursor pointer
cloud = rgba(250,250,255,0.985)
white = rgb(250,250,255)

.projects

  .bg
    absolute100()
    position fixed

    .multiply
      background hotPink
      mix-blend-mode multiply

    .bg-imgs
      absolute100()
      
      div
        absolute100()
        opacity 0
        background white
        background-size cover
        backface-visibility hidden

      video
        pointer-events none
        absolute100P{}
        width auto
        height auto
        min-width 100%
        min-height 100%
        overflow hidden
        transform translateX(-50%)
        margin-left 50%
        z-index 0
        background white
        
    .border
      absolute100()

  section
    color brown
    width 100%
    min-height 100vh
    box-sizing border-box
    position relative
    clearfix()      
      
    h2
      font-smoothing antialiased

    p
      Garamond()
      font-size 1.25em
      i
        font-style italic

    .photo
      display none

    .text
      position relative
      z-index 1
      backface-visibility hidden

    &.cta
      min-height 20vh
      background cloud

    .cta
      display block
      text-decoration none
      padding-bottom .5em
      position relative
      color cloud

      &:hover
        p
          color hotPink !important
          transform translateX(0.5em)
          transition transform 0.4s ease, color 0.25s ease 0.1s
        .line
          min-height 100%

      p
        GaramondDisplay()
        font-size 3.5em
        line-height 1
        font-weight light
        margin 0 !important
        padding 0.714em 0 0.5em 0
        position relative
        z-index 1
        transition transform 0.4s ease, color 0.25s ease

      .line
        height 0
        min-height 2px
        background cloud
        width 100%
        overflow hidden
        transition min-height 0.2s ease 0.1s
        position absolute
        bottom 0


  #top 
    background url('/images/string.jpg')
    background-size auto 50%
    background-position center center
    background-repeat no-repeat
    min-height 100vh

  #energy, #food, #cultural, #music
    margin-top 20vh

  #music, #medicine
    .text
      color brown

  #schools
    .keyline
      margin-bottom 0
    .col
      p
        margin-top 2em

// Tablet portrait and above
@media only screen and (min-width: 768px)
  .projects
    
    section
      .text
        color cloud
        column(10)
        push(1)
        overflow visible
        position absolute
        height 100%
        box-sizing border-box
        padding 5em 0 4em 0
        p
          transition color 0.25s ease
        h2
          column(12)
          font-size 4em
          letter-spacing 0.1em

      .col-wrap
        column(8)
        position absolute
        overflow visible
        bottom 0
        left 0
        padding-bottom 4em

        .keyline
          column(12)
          margin-bottom 1em
        
        &:hover
          p
            color brown
          .cta .line
            background brown
          .scrim 
            opacity 0.95


      .col
        column(6)
        clearfix()
        position relative

      .photo
        column(5)
        push(1)
        margin-bottom none

      .keyline
        background cloud
        height 2px
        transition background 0.25s ease
        clearfix()

      .scrim
        position absolute
        width 100%
        height 88%
        padding 0 1em
        left -1em
        top -2px
        background cloud
        opacity 0
        transition opacity 0.25s ease


    #top
      h1
        font-size 10em
      p
        font-size 2.5em
        column(8)
        push(2)
      

    



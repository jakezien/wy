.projects

  section
    color #302624
    width 100%
    padding-top 5em
    padding-bottom 5em
    clearfix()
    .text
      column(4)
      push(1)
    .photo
      height 420px
      background-size cover
      background-position center center
      column(5)
      push(1)

    h2 
      font-size 2em
      font-weight 400
      line-height 1em
      Brandon()
      text-transform uppercase
      font-weight bold
      letter-spacing 0.06em
    p
      Freight()
      font-size 1.5em


  #top 
    height 525px
    background url('/images/string.jpg')
    background-size auto 75%
    background-position center center
    background-repeat no-repeat
    h1
      FreightBig()
      font-size 10em
      font-weight normal
      text-align center
      margin .5em 0 .25em 0
    p
      Freight()
      font-size 2.5em
      text-align center
      column(8)
      push(2)

  #schools
    background-image url('/images/projects-schools@2x.jpg')
    background-color #F22E60
    background-blend-mode multiply
    background-size cover
    position relative
    height 525px
    .text
      push(7)
      color #fff
    .cta
      Brandon()
      margin-top 1.5em
      font-size 1.5em
      font-weight bold
      text-transform uppercase
      letter-spacing 0.06em
      color #fff
      text-decoration none
    .gradient
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      // background linear-gradient(top, #fff, rgba(255,255,255,0));

  #energy
    padding-top 8em
    .photo
      background-image url('/images/projects-energy@2x.jpg')

  #music .photo
      background-image url('/images/projects-music@2x.jpg')

  #medicine .photo
      background-image url('/images/projects-medicine.jpg')

  #weaving .photo
      background-image url('/images/projects-weaving@2x.jpg')

  #food .photo
      background-image url('/images/projects-food@2x.jpg')

  #math .photo
      background-image url('/images/projects-math@2x.jpg')
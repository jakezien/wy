#scrollNagger 
  position fixed
  bottom -180px
  left 50%
  border-radius 50%
  transform translateX(-50%)
  width 88px
  height 88px
  background #fff
  background-radius 50%
  z-index 2
  cursor pointer
  transition background 0.2s ease, opacity 1s ease
  box-shadow 0 1px 1px rgba(0,0,15,0.15)
  
  &:hover
    background hotPink
    div svg *
        stroke white

  div
    svg
      width 36px
      margin 0 auto
      display block
      margin-top 32px
      transform rotate(90deg)

      *
        transition stroke 0.2s ease
        stroke hotPink
.qeros

  .multiply 
    mix-blend-mode multiply
    overflow visible
    backface-visibility hidden
    div
      backface-visibility hidden
      position absolute
      background hotPink
      width 100%

  .border
    position absolute
    top 2vh
    width 100%
    height 100vh
    box-sizing border-box
    border 40px solid #fff
    border-width 2vw 2.5vw

  section
    width 100%
    display table
    position relative
    z-index 0
    min-height 75vh !important
    overflow hidden

    p
      Garamond()
      font-size 1.66em
      color brown
      i
        font-style italic

    h1, h2
      position relative

    .bg
      position absolute
      top 0 
      left 0
      width 100%
      height 100%
      overflow hidden
      .img, video
        position absolute
        top 0 
        left 0
        width 100%
        height 100%
        background-position center center
        background-size cover
      video
        min-width 100%
        min-height 100%
        width auto
        height auto
        overflow hidden
        transform translateX(-50%)
        margin-left 50%

    .frame-img
      position absolute
      &.move-h
        div
          width 150%
          height 100%
          background-size 100% auto
      &.move-v
        div
          width 100%
          height 120%
          background-size auto 100% 

      div
        position absolute
        height 110%
        background-size auto 100% 
        background-position center center
        backface-visibility hidden

    .caption
      column(3)
      position relative
      background #fff
      padding 2em 2em 4em 2em
      p
        margin 0
      .dropcap
        font-size 11em
        line-height 0.66em
        Franklin()
      .keyline
        width 100%
        height 1px
        background brown
        margin 0 0 2em 0

    &.video 
      min-height 100vh
      .bg 
        position fixed
      .caption
        column(8)
        push(2)
        background transparent


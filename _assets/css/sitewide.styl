total-width = 100%
hotPink = #F22E60
crimson = #D83027
brown = #533B3A
dkBrown = #241C1C
clay = #C0817A
cloud = rgba(250,250,255,0.985)
white = rgb(250,250,255)

/* Smaller than standard 960 (devices and browsers) */
@media only screen and (max-width: 959px) {}

/* Tablet Portrait size to standard 960 (devices and browsers) */
@media only screen and (min-width: 768px) and (max-width: 959px) {}

/* All Mobile Sizes (devices and browser) */
@media only screen and (max-width: 767px) {}

/* Mobile Landscape Size to Tablet Portrait (devices and browsers) */
@media only screen and (min-width: 480px) and (max-width: 767px) {}

/* Mobile Portrait Size to Mobile Landscape Size (devices and browsers) */
@media only screen and (max-width: 479px) {}

body
  height auto
  color brown
  *
    background-repeat no-repeat
  &.loading
    #site-nav
      pointer-events none    
    .page
      opacity 0
  &.menu-show, &.donate-show
    overflow hidden
  &.stop-scroll
    height 100%
    overflow hidden


#content
  transition filter 1s ease, -webkit-filter 1s ease

  .page
    opacity 0
    transition opacity .45s ease-in
    &.is-visible
      transition opacity 1s ease-out
      opacity 1

  .img.loading, .div.loading
    opacity 0

#backstage
  display none
    
#site-header
  width 100%
  clearfix()

#menu-btn 
  width 44px
  height 44px
  position fixed
  cursor pointer
  z-index 11
  div
    width 26px
    height 3px
    margin-left 9px
    margin-bottom 7px
    background-color #000
    &:first-child
      margin-top 11px
    &:last-child
      margin-bottom none

#site-footer
  padding 10vh 0 6vh 0
  width 100%
  background-color dkBrown
  color clay
  clearfix()
  text-align center
  position relative

  h2
    margin-bottom 4em

  .social a
    display inline-block
    margin 0
    padding 0 .5em
    vertical-align center

  .email a
    font-size 3.25em
    display block

  a 
    Garamond()
    color clay
    text-decoration none
    margin-bottom 1em
    transition 0.15s ease   
       
    &:hover
      color hotPink

    svg
      width 50px
      height 50px
      *
        fill clay
        transition 0.15s ease
      &:hover
        *
          fill hotPink
    
  .copyright
    margin-top 12em
    font-size 1em
    p
      Garamond()
      margin 0 0 .5em 0

#site-nav
  position fixed
  z-index 10
  width 100%
  color brown
  backface-visibility hidden
  ul
    height 100%
    display none
    list-style none
    margin 0 auto
    text-align center
    background-color hotPink
  li
    FranklinBold()
    text-transform uppercase
    font-size 1.25em
    letter-spacing 0.25em
    line-height 4.25em

    a
      padding 1.5em 1em
      color brown
      text-decoration none
      transition color 0.15s ease
      &:hover, &.active
        color hotPink

  .logotype
    float left
    a
      display block
      width 80px
      padding 0

      &:hover
        svg 
          *
            fill hotPink

      svg
        position relative
        top 0.75em
        height 36px
        *
          transition fill 0.15s ease
          fill brown

  .donate-btn
    float right
    a
      border 1px solid
      border-radius 1px
      padding 0.75em 0.75em
      margin 0.75em 1em 0.75em 0.25em
      transition color 0.15s ease, border-color 0.15s ease, background-color 0.15s ease
      &:hover
        color white !important
        background-color hotPink
        border-color hotPink

      &.active
        color hotPink
      

  &.show
    height 100%
    ul
      display block

section.cta
  text-align center
  a 
    display inline-block
    font-size 2.5em
    GaramondDisplayBold()
    text-decoration none
    color hotPink
    transition color 0.15s
    &:hover
      color #CC1A1E

.page
  h1
    GaramondDisplay()
    font-size 4em
    font-weight normal
    line-height 1.2
    
  h2
    Franklin()
    font-size 3.25em
    letter-spacing 0.075em
    margin 0
    text-transform uppercase

  h3
    FranklinBold()
    font-size 1.33em
    letter-spacing 0.2em
    margin 0
    text-transform uppercase
    
  .table
    display table
  .cell
    display table-cell
    vertical-align middle
    position relative

  #top 
    width 100%
    display table
    min-height 66vh
    h1
      font-size 6.5em
      text-align center
      margin 0 0 .25em 0
    h2
      text-align center
    p
      Garamond()
      text-align center
      font-size 2em

@media only screen and (min-width: 768px)
  
  section.cta
    font-size 1.2em

  #site-nav
    height auto
    transition transform 0.33s ease-out, background-color 0.33s ease

    &.scroll-hide
      transition transform 0.25s ease-in
      transform translateY(-120px)

    &.transparent ul
      background-color transparent

    ul
      margin 0 auto
      text-align center
      display block
      background-color white

    li
      display inline-block
      letter-spacing 0.25em
      line-height 4.25em

      a
        padding 1.5em 1em
        color brown
        text-decoration none
        transition color 0.15s ease
        &:hover, &.active
          color #F22E60

  #site-footer

  
    .email
      column(3)
      push(1)
      font-size 0.6em
      text-align left

    .social
      column(4)

    .copyright
      column(4)
      text-align left
      font-size 0.75em
    

  #menu-btn
    position static
    display none

  .page
    h1
      font-size 4.5em
    #top
      min-height 66vh
      padding-top 2em
      h1
        font-size 10em
      p
        font-size 2.5em
        column(8)
        push(2)
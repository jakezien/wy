total-width = 100%
hotPink = #F22E60
maroon = #D83027
brown = #533B3A
dkBrown = #241C1C

/* Smaller than standard 960 (devices and browsers) */
@media only screen and (max-width: 959px) {}

/* Tablet Portrait size to standard 960 (devices and browsers) */
@media only screen and (min-width: 768px) and (max-width: 959px) {}

/* All Mobile Sizes (devices and browser) */
@media only screen and (max-width: 767px) {}

/* Mobile Landscape Size to Tablet Portrait (devices and browsers) */
@media only screen and (min-width: 480px) and (max-width: 767px) {}

/* Mobile Portrait Size to Mobile Landscape Size (devices and browsers) */
@media only screen and (max-width: 479px) {}

body
  height auto
  color brown
  *
    background-repeat no-repeat
  &.loading
    #site-nav
      pointer-events none    
    .page
      opacity 0
  &.menu-show
    overflow hidden

#content
  .page
    opacity 0
    transition opacity .45s ease-in
    &.is-visible
      transition opacity 1s ease-out
      opacity 1
    
#site-header
  width 100%
  clearfix()

#menu-btn 
  width 44px
  height 44px
  position fixed
  cursor pointer
  z-index 11
  div
    width 26px
    height 3px
    margin-left 9px
    margin-bottom 7px
    background-color #000
    &:first-child
      margin-top 11px
    &:last-child
      margin-bottom none

#site-footer
  width 100%
  clearfix()
  background-color dkBrown
  color brown
  transition opacity 1s ease-out
  &.transitionOut
    transition opacity .45s ease-in
    opacity 0
  &.transitionIn
    opacity 0

#site-nav
  position fixed
  z-index 10
  width 100%
  color brown
  backface-visibility hidden
  ul
    height 100%
    display none
    list-style none
    margin 0 auto
    text-align center
    background-color hotPink
  li
    FranklinBold()
    text-transform uppercase
    font-size 1.25em
    letter-spacing 0.25em
    line-height 4.25em

    a
      padding 1.5em 1em
      color brown
      text-decoration none
      transition color 0.15s ease
      &:hover, &.active
        color #F22E60

  &.show
    height 100%
    ul
      display block

section.cta
  text-align center
  a 
    display inline-block
    font-size 2.5em
    GaramondDisplayBold()
    text-decoration none
    color hotPink
    transition color 0.15s
    &:hover
      color #CC1A1E

.page
  .table
    display table
  .cell
    display table-cell
    vertical-align middle
    h1
      margin-top 0
  #top 
    width 100%
    display table
    min-height 66vh
    h1
      GaramondDisplay()
      font-size 6.5em
      font-weight normal
      text-align center
      margin .5em 0 .25em 0
    h2
      Franklin()
      font-size 3.25em
      text-align center
      letter-spacing 0.2em
      margin 0
      text-transform uppercase
    p
      Garamond()
      text-align center
      font-size 2em

@media only screen and (min-width: 768px)
  
  section.cta
    font-size 1.2em

  #site-nav
    height auto
    transition transform 0.33s ease-out

    &.scroll-hide
      transition transform 0.25s ease-in
      transform translateY(-120px)

    ul
      margin 0 auto
      text-align center
      display block
      background-color #fff

    li
      display inline-block
      letter-spacing 0.25em
      line-height 4.25em

      a
        padding 1.5em 1em
        color brown
        text-decoration none
        transition color 0.15s ease
        &:hover, &.active
          color #F22E60

  
  #menu-btn
    position static
    display none

  .page
    #top
      min-height 66vh
      padding-top 2em
      h1
        font-size 10em
      p
        font-size 2.5em
        column(8)
        push(2)